generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  rides Ride[]
}

model Driver {
  id          String @id @default(uuid())
  name        String
  description String
  car         String
  rating      Float
  review      String
  pricePerKm  Float
  minKm       Int

  rides Ride[]
}

model Ride {
  id          String   @id @default(uuid())
  driverId    String
  userId      String
  origin      String
  destination String
  distance    Float
  price       Float
  createdAt   DateTime @default(now())

  driver Driver @relation(fields: [driverId], references: [id])
  user   User   @relation(fields: [userId], references: [id])
}
